    border-top: 3px solid black;
    margin-top: 10px;
    margin-bottom: 10px;
} */

QFrame#UnderlineSeperator {
    border: none;
    border-top: 2px solid #105;
    background-color: #105;
    margin-top: 6px;
    margin-bottom: 6px;
}


QFrame#SlideNotification {
    background-color: #105;
    color: white;
    border-radius: 8px;
    padding: 4px;
    font-size: 14px;
    border: 2px solid #0bb;
}


QLabel#SlideNotificationLabel {
    background-color: #e7b2ff;
    color: white;
    border-radius: 8px;
    padding: 2px;
    font-size: 14px; 
}